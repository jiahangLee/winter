<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.winter.demo.dao.PrivilegeDao">
    <sql id="BASE_TABLE">
        privilege
    </sql>

    <sql id="BASE_COLUMN">
        id,name,description
    </sql>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id"
            parameterType="com.winter.demo.entity.rbac_jpa.Privilege">
        INSERT INTO
        <include refid="BASE_TABLE"/>
        <trim prefix="(" suffix=")" suffixOverrides=",">
            name,description,create_time,update_time
            <!--<if test="name != null">-->
            <!--phone,-->
            <!--</if>-->
        </trim>
        <trim prefix="VALUES(" suffix=")" suffixOverrides=",">
            #{name, jdbcType=VARCHAR},#{description, jdbcType=VARCHAR},CURRENT_TIMESTAMP
            ,CURRENT_TIMESTAMP
            <!--<if test="phone != null">-->
            <!--#{phone, jdbcType=VARCHAR},-->
            <!--</if>-->
        </trim>
    </insert>

    <select id="selectPrivilege" resultType="com.winter.demo.entity.rbac_jpa.Privilege">
        SELECT
        id,name,description
        FROM
        <include refid="BASE_TABLE"/>
        ORDER BY id
    </select>
    <select id="selectById" parameterType="Integer" resultType="com.winter.demo.entity.rbac_jpa.Privilege">
        SELECT
        <include refid="BASE_COLUMN"/>
        FROM
        <include refid="BASE_TABLE"/>
        WHERE id = #{id}
    </select>

    <delete id="delete" parameterType="Integer">
        delete From privilege WHERE id = #{id}
    </delete>

    <update id="update" parameterType="com.winter.demo.entity.rbac_jpa.Privilege">
        update privilege
        <set>
            <if test="name!=null">
                name = #{name},
            </if>
            <if test="description!=null">
                description = #{description},
            </if>
            update_time = CURRENT_TIMESTAMP
        </set>
        WHERE id = #{id}
    </update>
</mapper>
